@model List<SMART_PRINTER_SERVICE.Models.Order>
<!DOCTYPE html>
<html lang="en">

<body>
    <div class="grid">
        <div style="background-color: white; height: 40px; position: relative;">
            <button class="recharge-button">
                <i class="fa fa-angle-left" style="font-size:19px; width: 20px;"></i> Order status
            </button>
        </div>
        <div style="background-color: #FEF7FF; height: 110px;margin:0px 5px 0px 5px;">
            <div class="topnav">
                <div class="link-active" >
                    <a class="nav-link text-dark" asp-area="" asp-controller="OrderStatus" asp-action="OrderStatus">All orders</a>
                    <div class="shape"></div>
                </div>
                <div class="link">
                    <a class="nav-link text-dark" asp-area="" asp-controller="OrderStatus" asp-action="OrderStatusPending">Pending</a>
                </div>
                <div class="link">
                    <a class="nav-link text-dark" asp-area="" asp-controller="OrderStatus" asp-action="OrderStatusComplete">Completed</a>
                </div>
            </div>
        </div>
        <div style="background-color: white; height: 38px;">
            <div class="flexbox">
                <div class="history-and-view-available">Recent orders</div>
                <div>
                    <button class="view-all">
                        View all 	<i style="font-size:19px; width: 14px;" class="fa">&#xf105;</i>
                    </button>
                </div>
            </div>
        </div>
        @if (Model != null && Model.Any())
        {
                @foreach (var order in Model)
                {
                    <div style="background-color: white; height: 85px; padding: 2px; border: rgb(229, 223, 223) 0.1px solid ; border-radius: 7px;">
                        <div style="font-size: 16px; line-height: 20px; font-weight: 500; margin-bottom: 5px;">
                            Filename: @order.Filename
                        </div>
                        <div style="font-size: 16px; line-height: 20px; font-weight: 500; margin-bottom: 10px;">
                            User: @order.UsernameOrder
                        </div>
                        <div style="font-size: 16px; line-height: 24px; font-weight: 600;">
                            Status: @order.Status
                        </div>
                    </div>
                }
        }
        else
        {
            <p>No orders available.</p>
        }

        

        <div style="background-color: white; height: 100px; margin-top: 10px;">
            <div class="flexbox2">
                <div class="file-info-grid">
                    <div class="file-picture">
                        <img class="profile-picture" src="~/Images/cart.png</div>
                    <div class="file-info">
                        <p class="file-name">
                            All Orders
                        </p>
                    </div>
                </div>
                <div>
                </div>
            </div>
            <div class="flexbox2">
                <div class="file-info-grid">
                    <div class="file-picture">
                        <img class="profile-picture" src="~/Images/money.png">
                    </div>
                </div>
                <div>
                </div>
            </div>
        </div>
        <div style="background-color: white; height: 100px;">
            <div class="grid0">
                <button class="recharge-buyprinting-button">
                    Print Again
                </button>
                <button class="recharge-buyprinting-button1">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</body>
</html>