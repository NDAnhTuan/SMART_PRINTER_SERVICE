            <input type="text" placeholder="Enter a number(1 A3 page=2 A4 pages)">
        </div>
        <div style="background-color: white; height: 35px;">
            <div class="div3">
                Available combo
            </div>
        </div>
        <div style="background-color: white; height: 215px;">
            <div class="grid0">
                <div class="printers-box">
                    <div class="printers">
                        Product image
                        <div class="absolute">
                            Choose
                        </div>
                    </div>
                    <div style=" font-size: 12px; line-height: 20px; padding-left: 5px;">
                        200 pages to cry
                    </div>
                    <div style=" font-size: 15px; line-height: 23px; font-weight: 600; padding-left: 5px;">
                        100 A4 pages
                    </div>
                    <div style=" font-size: 15px; line-height: 20px; font-weight: 600; padding-left: 5px;">
                        30.000 VND
                    </div>
                </div>
                <div class="printers-box">
                    <div class="printers">
                        Product image
                        <div class="absolute">
                            Choose
                        </div>
                    </div>
                    <div style=" font-size: 12px; line-height: 20px; padding-left: 5px;">
                        Holy Sheet
                    </div>
                    <div style=" font-size: 15px; line-height: 23px; font-weight: 600; padding-left: 5px;">
                        200 A4 pages
                    </div>
                    <div style=" font-size: 15px; line-height: 20px; font-weight: 600; padding-left: 5px;">
                        50.000 VND
                    </div>
                </div>
            </div>
        </div>
        <div style="background-color: white; height: 100px;">
            <div class="flexbox2">
                <div class="file-info-grid">
                    <div class="file-picture">
                        <img class="profile-picture" src="~/Images/file.png">
                    </div>
                    <div class="file-info">
                        <p class="file-name">
                            Total pages
                        </p>
                        <p class="file-price">
                            50
                        </p>
                    </div>
                </div>
                <div>
                </div>
            </div>
            <div class="flexbox2">
                <div class="file-info-grid">
                    <div class="file-picture">
                        <img class="profile-picture" src="~/Images/money.png">
                    </div>
                    <div class="file-info">
                        <p class="file-name">
                            Total cost
                        </p>
                        <p class="file-price">
                            17.000 VND
                        </p>
                    </div>
                </div>
                <div>
                </div>
            </div>
        </div>
        <div style="background-color: white; height: 100px;">
            <div class="grid0">
                <button class="recharge-buyprinting-button">
                    Confirm
                </button>
                <button class="recharge-buyprinting-button1">
                    Cancel
                </button>
